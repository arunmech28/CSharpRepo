<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
  <appSettings>
    <!--General Settings-->
    <add key="ProjectName" value="Flight Application"/>
    <add key="DefaultDataSheet" value="General_Data"/>
    <add key="DataReferenceIdentifier" value="#"/>
    <add key="ApplicationUrl" value="http://newtours.demoaut.com/"/>
    <add key="DateFormatString" value="dd-MMM-yyyy hh:mm:ss tt"/>

    <!--Browser Settings-->
    <add key="InternetExplorerDriverPath" value="C:\\Javalibs\\Selenium\\Browser Drivers\\IEDriverServer.exe"/>
    <add key="ChromeDriverPath" value="C:\\Javalibs\\Selenium\\Browser Drivers\\chromedriver.exe"/>
    <add key="DefaultBrowser" value="firefox"/>

    <!--Execution Settings-->
    <add key="RunConfiguration" value="Regression"/>
    <add key="OnError" value="NextIteration"/>
    <add key="NumberOfThreads" value="1"/>
    <add key="GridMode" value="off"/>

    <!--Grid-specific Settings (applicable only if GridMode=On)-->
    <add key="GridHubUrl" value="http://10.252.48.9:4444/wd/hub"/>
    <add key="DefaultBrowserVersion" value="9.0"/>
    <add key="DefaultPlatform" value="Windows"/>

