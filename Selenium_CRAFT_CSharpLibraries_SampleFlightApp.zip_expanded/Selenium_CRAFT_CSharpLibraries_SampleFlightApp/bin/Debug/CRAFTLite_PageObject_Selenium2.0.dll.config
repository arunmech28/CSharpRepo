    <add key="ExcelReport" value="True"/>
    <add key="IncludeTestDataInReport" value="True"/>
    <add key="TakeScreenshotFailedStep" value="True"/>
    <add key="TakeScreenshotPassedStep" value="False"/>
    <add key="ReportTheme" value="MYSTIC"/>

    <add key="TestDataSheet" value="Test Data"/>
    <add key="CheckPointSheet" value="Parametrized Checkpoints"/>
    <add key="Host" value="localhost"/>
    <add key="Port" value="4444"/>
    <add key="Debug" value="True"/>

  </appSettings>
</configuration>

